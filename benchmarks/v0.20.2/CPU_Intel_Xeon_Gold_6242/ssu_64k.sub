rm -fr /dev/shm/unifrac.tmp
t1=`date +%s`
taskset -c 16-31 time ssu -m unweighted -i unifrac_65536.biom -t unifrac_65536.tre -o /dev/shm/unifrac.tmp --mode partial --start 0 --stop 32768
t2=`date +%s`
let dt=t2-t1
rm -fr /dev/shm/unifrac.tmp
echo "=== unweighted time: $dt ==="

t1=`date +%s`
taskset -c 16-31 time ssu -m unweighted -f -i unifrac_65536.biom -t unifrac_65536.tre -o /dev/shm/unifrac.tmp --mode partial --start 0 --stop 32768
