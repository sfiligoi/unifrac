#!/bin/bash
#PBS -q highmem
#PBS -l nodes=brncl-73,procs_bitmap=0000000000000000111111111111111100000000000000000000000000000000
hostname
lscpu
date

export OMP_NUM_THREADS=16

cd /panfs/panfs1.ucsd.edu/panscratch/isfiligoi/anaconda3_2020.11_20.2/benchmarks/ssu
source ../../setup_conda.source
conda activate unifrac

md5sum unifrac_65536.biom
md5sum unifrac_65536.tre

echo "===="
ssu -i unifrac_65536.biom -t unifrac_65536.tre -m unweighted -o /dev/shm/unifrac.tmp --mode partial-report
