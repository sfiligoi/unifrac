rm -fr /dev/shm/unifrac.tmp
t1=`date +%s`
taskset -c 0-15 time ssu -m unweighted -i unifrac_50000.biom -t unifrac_50000.tre -o /dev/shm/unifrac.tmp --mode partial --start 0 --stop 25000
t2=`date +%s`
let dt=t2-t1
rm -fr /dev/shm/unifrac.tmp
echo "=== unweighted time: $dt ==="

t1=`date +%s`
